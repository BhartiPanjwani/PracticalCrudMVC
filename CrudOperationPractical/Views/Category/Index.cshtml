@model IEnumerable<CrudOperationPractical.Models.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.Name)
        </th>
    
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => category.Name)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = category.Id }) |
                @Html.ActionLink("Detail", "Detail", new { id = category.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = category.Id })
            </td>
        </tr>

    }
</table> 